# Server Configuration
PORT=5001
NODE_ENV=development

# Database - Option 1: Individual Parameters (Local Development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=srijani_portal
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database - Option 2: Connection String (NeonDB, Railway Production)
# If DATABASE_URL is set, it will be used instead of the above parameters
# Example NeonDB format:
# DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_use_long_random_string
JWT_EXPIRES_IN=7d

# Email Configuration (Gmail example - get App Password from Google Account)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
EMAIL_FROM=Srijani <noreply@srijani.com>

# Frontend URL (Update for production)
FRONTEND_URL=https://srijani-order-portal.vercel.app

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Company Information
COMPANY_NAME=Srijani
COMPANY_EMAIL=support@srijani.com
COMPANY_ADDRESS_INDIA=Your India Address Here
COMPANY_ADDRESS_BELGIUM=Your Belgium Address Here
